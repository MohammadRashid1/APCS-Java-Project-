<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.studentmanagement.controllers.StudentController">
    
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" alignment="CENTER_LEFT" spacing="20">
            <Button text="â† Back to Dashboard" fx:id="backButton" onAction="#handleBackToDashboard" 
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Label text="ðŸ‘¨â€ðŸŽ“ Student Management" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <TextField fx:id="searchField" promptText="Search students..." style="-fx-pref-width: 250px;" 
                       onKeyReleased="#handleSearch" />
            <Button text="Search" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
        </HBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.6">
            <!-- Left side: Student Table -->
            <VBox spacing="10" style="-fx-padding: 15;">
                <Label text="Student Records" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <TableView fx:id="studentTable" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="idColumn" text="Student ID" prefWidth="100" />
                        <TableColumn fx:id="nameColumn" text="First Name" prefWidth="120" />
                        <TableColumn text="Last Name" prefWidth="120">
                            <cellValueFactory>
                                <PropertyValueFactory property="lastName" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="departmentColumn" text="Department" prefWidth="150" />
                        <TableColumn fx:id="gpaColumn" text="GPA" prefWidth="80" />
                        <TableColumn text="Email" prefWidth="200">
                            <cellValueFactory>
                                <PropertyValueFactory property="email" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>
            
            <!-- Right side: Form -->
            <VBox spacing="15" style="-fx-padding: 15;">
                <Label text="Student Details Form" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="100" />
                        <ColumnConstraints prefWidth="200" />
                    </columnConstraints>
                    
                    <Label text="Student ID*" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="studentIdField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                    
                    <Label text="First Name*" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextField fx:id="firstNameField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                    
                    <Label text="Last Name*" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <TextField fx:id="lastNameField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    
                    <Label text="Date of Birth*" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <DatePicker fx:id="dobPicker" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                    
                    <Label text="Email*" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                    <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                    
                    <Label text="Phone*" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                    <TextField fx:id="phoneField" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                    
                    <Label text="Department*" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                    <ComboBox fx:id="departmentCombo" GridPane.rowIndex="6" GridPane.columnIndex="1" />
                    
                    <Label text="GPA*" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                    <TextField fx:id="gpaField" GridPane.rowIndex="7" GridPane.columnIndex="1" />
                    
                    <Label text="Enrollment Year" GridPane.rowIndex="8" GridPane.columnIndex="0" />
                    <Spinner fx:id="yearSpinner" GridPane.rowIndex="8" GridPane.columnIndex="1" />
                </GridPane>
                
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Add" fx:id="addButton" onAction="#handleAddStudent" 
                            style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 80px;" />
                    <Button text="Update" fx:id="updateButton" onAction="#handleUpdateStudent" 
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 80px;" />
                    <Button text="Delete" fx:id="deleteButton" onAction="#handleDeleteStudent" 
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 80px;" />
                    <Button text="Clear" fx:id="clearButton" onAction="#handleClearForm" 
                            style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 80px;" />
                </HBox>
                
                <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #f8f9fa; -fx-background-radius: 5;">
                    <Label text="Notes:" style="-fx-font-weight: bold;" />
                    <Label text="1. Fields marked with * are required" style="-fx-font-size: 12px;" />
                    <Label text="2. Student must be at least 16 years old" style="-fx-font-size: 12px;" />
                    <Label text="3. GPA must be between 0.0 and 4.0" style="-fx-font-size: 12px;" />
                </VBox>
            </VBox>
        </SplitPane>
    </center>
    
    <bottom>
        <HBox style="-fx-background-color: #ecf0f1; -fx-padding: 10;" alignment="CENTER">
            <Label text="Total Students: " style="-fx-font-weight: bold;" />
            <Label text="0" fx:id="studentCountLabel" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="CRUD Operations: Create, Read, Update, Delete" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
        </HBox>
    </bottom>
    
</BorderPane>
